<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Food Item</th>
      <th>Calories</th>
      <th>Protein(grams)</th>
      <th>Carbs(grams)</th>
      <th>Fat(grams)</th>
      <th>Weight(grams)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_logs.each do |food_log| %>
      <tr>
        <td><%= food_log.name %></td>
        <td><%= food_log.entry %></td>
        <td><%= food_log.calories %></td>
        <td><%= food_log.protein %></td>
        <td><%= food_log.carbs %></td>
        <td><%= food_log.fat %></td>
        <td><%= food_log.weight %></td>
        <td><%= link_to 'Show', food_log, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_food_log_path(food_log), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', food_log, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food log', new_food_log_path, class: 'btn btn-primary' %>
